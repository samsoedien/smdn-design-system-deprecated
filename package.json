{
  "private": true,
  "name": "smdn-design-system",
  "version": "1.0.0",
  "description": "Design system with reusable UI components & design tokens for personal projects",
  "main": "index.js",
  "repository": "https://github.com/samsoedien/smdn-design-system",
  "author": "Samsoedien <contact@samsoedien.com>",
  "license": "MIT",
  "contributors": [
    {
      "name": "N Samsoedien",
      "url": "https://github.com/samsoedien"
    }
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn lerna bootstrap",
    "build:prod": "yarn lerna run build:prod --stream",
    "clean": "yarn lerna clean && lerna run --parallel clean",
    "compile": "yarn tsc --noEmit",
    "compile:watch": "yarn compile --watch",
    "start": "yarn lerna run start --stream",
    "lint": "eslint ./packages --ext js,jsx,ts,tsx",
    "lint:styles": "stylelint './packages/**/*.tsx'",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "commitlint": "^8.3.5",
    "cross-env": "^7.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-styled-components": "^7.0.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "styled-components": "^5.0.1",
    "stylelint": "^13.2.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^3.7.5",
    "typescript-plugin-styled-components": "^1.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn --silent lint --fix"
    ],
    "*.tsx": [
      "yarn --silent lint:styles"
    ]
  },
  "engines": {
    "node": ">=10.10.0",
    "npm": ">=6.8.0",
    "yarn": ">=1.16.0"
  },
  "browserslist": [
    "last 3 chrome versions",
    "last 3 firefox versions",
    "last 3 safari versions",
    "last 3 edge versions"
  ]
}
