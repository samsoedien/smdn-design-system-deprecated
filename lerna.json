{
  "packages": [
    "packages/*"
  ],
  "version": "0.2.5",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "message": "chore(release): publish %s [ci skip]",
      "conventionalCommits": true,
      "allowBranch": [
        "master",
        "next",
        "feature/*"
      ],
      "ignoreChanges": [
        "*.md",
        "*.story.tsx",
        "*.story.mdx",
        "*.test.ts",
        "*.test.tsx",
        "*.snap",
        "*.d.ts"
      ]
    }
  }
}
