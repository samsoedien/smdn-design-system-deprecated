{
  "packages": [
    "packages/*"
  ],
  "version": "0.2.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.story.tsx",
        "*.story.mdx",
        "*.test.ts",
        "*.test.tsx",
        "*.snap",
        "*.d.ts"
      ],
      "message": "chore(release): publish %s [ci skip]",
      "conventionalCommits": true,
      "registry": "http://localhost:4873",
      "access": "public",
      "npmClient": "yarn",
      "allowBranch": [
        "master",
        "next",
        "feature/*"
      ]
    }
  }
}
