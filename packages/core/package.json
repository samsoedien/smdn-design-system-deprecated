    "clean": "rm -rf dist/* && rm -rf lib/*"
  },
  "peerDependencies": {
    "react": ">= 16",
    "react-dom": ">= 16",
    "styled-components": ">= 5"
  },
  "dependencies": {
    "@smdn/icons": "1.0.0",
    "@smdn/shared": "1.0.0",
    "@types/styled-components": "^4.4.3",
    "enzyme": "^3.11.0",
    "jest-styled-components": "^7.0.0",
    "prop-types": "^15.7.2"
  }
}
