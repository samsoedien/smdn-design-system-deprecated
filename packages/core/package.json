{
  "name": "@smdn/core",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "repository": "https://github.com/samsoedien/smdn-design-system/tree/master/packages/core",
  "author": "Samsoedien <contact@samsoedien.com>",
  "scripts": {
    "build": "yarn build:scripts && yarn build:types",
