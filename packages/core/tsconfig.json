    "outDir": "lib",
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["lib", "tests", "**/*.test.*", "**/*.stories.*"],
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../charts"
    },
    {
      "path": "../layouts"
    },
    {
      "path": "../icons"
    },
    {
      "path": "../shared"
    }
  ]
}
